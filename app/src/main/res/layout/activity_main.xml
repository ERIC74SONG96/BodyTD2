<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Vue du jeu -->
    <com.example.myapplicationbodytd.GameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Barre de statistiques -->
    <LinearLayout
        android:id="@+id/statsBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#E6000000"
        android:elevation="8dp">

        <TextView
            android:id="@+id/healthText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="❤ 100"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/moneyText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="💰 350"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/waveText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🌊 Vague 1"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="end" />
    </LinearLayout>

    <!-- Menu de pause -->
    <ImageButton
        android:id="@+id/pauseButton"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_pause"
        android:background="@drawable/button_background"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:elevation="8dp" />

    <!-- Menu de pause (caché par défaut) -->
    <LinearLayout
        android:id="@+id/pauseMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#E6000000"
        android:visibility="gone"
        android:elevation="8dp">

        <Button
            android:id="@+id/resumeButton"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Reprendre"
            android:textSize="20sp"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/restartButton"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Redémarrer"
            android:textSize="20sp"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/quitButton"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Quitter"
            android:textSize="20sp"
            android:layout_margin="8dp" />
    </LinearLayout>

    <!-- Menu de sélection des tours -->
    <LinearLayout
        android:id="@+id/towerMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#E6000000"
        android:layout_gravity="bottom"
        android:padding="12dp"
        android:elevation="8dp">

        <Button
            android:id="@+id/basicTowerButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tour Basique (50)"
            android:textSize="16sp"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/sniperTowerButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tour Sniper (100)"
            android:textSize="16sp"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/rapidTowerButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tour Rapide (75)"
            android:textSize="16sp"
            android:layout_margin="4dp" />
    </LinearLayout>

</FrameLayout>
